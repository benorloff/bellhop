generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subscription {
  id       BigInt @id @default(autoincrement())
  userId   BigInt
  stripeId BigInt
  sites    Site[]
}

model Site {
  id             BigInt        @id @default(autoincrement())
  name           String
  url            String
  photo          String?
  userId         BigInt
  subscriptionId BigInt?
  slug           String        @unique
  Subscription   Subscription? @relation(fields: [subscriptionId], references: [id])
  tickets        Ticket[]
}

model Ticket {
  id              BigInt   @id @default(autoincrement())
  status          String
  authorId        BigInt
  attachments     String
  description     String
  priority        BigInt
  submission_date DateTime
  siteId          BigInt
  site            Site     @relation(fields: [siteId], references: [id])
}
